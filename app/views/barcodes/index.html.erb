<p id="notice"><%= notice %></p>

<h1>Barcodes</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @barcodes.each do |barcode| %>
      <tr>
        <td><%= barcode.code %></td>
        <td><%= link_to 'Show', barcode %></td>
        <td><%= link_to 'Edit', edit_barcode_path(barcode) %></td>
        <td><%= link_to 'Destroy', barcode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Barcode', new_barcode_path %>
